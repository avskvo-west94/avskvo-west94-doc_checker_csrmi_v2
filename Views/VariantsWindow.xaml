<Window x:Class="DocumentChecker.Views.VariantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Варианты" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="TitleText" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

        <ListBox x:Name="VariantsListBox" Grid.Row="1" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="NewVariantTextBox" Width="400" Margin="0,0,5,0"/>
            <Button Content="Добавить" Click="Add_Click" Padding="10,5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Удалить выбранное" Click="Delete_Click" Margin="0,0,5,0" Padding="10,5"/>
            <Button Content="Закрыть" Click="Close_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
