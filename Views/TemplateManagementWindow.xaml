<Window x:Class="DocumentChecker.Views.TemplateManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление шаблонами" Height="600" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Шаблоны:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <DataGrid x:Name="TemplatesDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreatedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="150"/>
                <DataGridTextColumn Header="Дата изменения" Binding="{Binding ModifiedDate, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Создать" Click="Create_Click" Margin="0,0,5,0" Padding="15,5"/>
            <Button Content="Редактировать" Click="Edit_Click" Margin="0,0,5,0" Padding="15,5"/>
            <Button Content="Клонировать" Click="Clone_Click" Margin="0,0,5,0" Padding="15,5"/>
            <Button Content="Удалить" Click="Delete_Click" Margin="0,0,5,0" Padding="15,5"/>
            <Button Content="Закрыть" Click="Close_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
