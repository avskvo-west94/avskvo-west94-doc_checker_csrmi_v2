<Window x:Class="DocumentChecker.Views.LearningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить ошибочный вариант" Height="300" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Текст из документа:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="ErrorTextTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="80" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Поле:" Margin="0,0,0,5"/>
            <ComboBox x:Name="FieldComboBox" DisplayMemberPath="Name"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Margin="0,0,5,0" Padding="15,5"/>
            <Button Content="Отмена" Click="Cancel_Click" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
